{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Nom de fabrique de données",
			"defaultValue": "ADF-Formation-Integration"
		},
		"LS_ADLS_ADF_Formation_accountKey": {
			"type": "secureString",
			"metadata": "Chaîne sécurisée pour « accountKey » de « LS_ADLS_ADF_Formation »"
		},
		"LS_Formation_ADF_VB_password": {
			"type": "secureString",
			"metadata": "Chaîne sécurisée pour « password » de « LS_Formation_ADF_VB »"
		},
		"LS_ADLS_ADF_Formation_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://scformationadfvb.dfs.core.windows.net/"
		},
		"LS_Formation_ADF_VB_properties_typeProperties_server": {
			"type": "string",
			"defaultValue": "mss-sql-formationvb.database.windows.net"
		},
		"LS_Formation_ADF_VB_properties_typeProperties_database": {
			"type": "string",
			"defaultValue": "free-sql-db-vb"
		},
		"LS_Formation_ADF_VB_properties_typeProperties_userName": {
			"type": "string",
			"defaultValue": "admin-vb"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI pour le compte de stockage contenant des modèles ARM liés"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Jeton SAS pour le compte de stockage contenant des modèles ARM liés"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "ADF-Formation-Integration_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2024-03-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"LS_ADLS_ADF_Formation_accountKey": {
						"value": "[parameters('LS_ADLS_ADF_Formation_accountKey')]"
					},
					"LS_Formation_ADF_VB_password": {
						"value": "[parameters('LS_Formation_ADF_VB_password')]"
					},
					"LS_ADLS_ADF_Formation_properties_typeProperties_url": {
						"value": "[parameters('LS_ADLS_ADF_Formation_properties_typeProperties_url')]"
					},
					"LS_Formation_ADF_VB_properties_typeProperties_server": {
						"value": "[parameters('LS_Formation_ADF_VB_properties_typeProperties_server')]"
					},
					"LS_Formation_ADF_VB_properties_typeProperties_database": {
						"value": "[parameters('LS_Formation_ADF_VB_properties_typeProperties_database')]"
					},
					"LS_Formation_ADF_VB_properties_typeProperties_userName": {
						"value": "[parameters('LS_Formation_ADF_VB_properties_typeProperties_userName')]"
					}
				}
			},
			"dependsOn": []
		}
	]
}